{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "version": "62.0.4",
    "default_locale": "en",
    "author": "Kesantielu Dasefern",
    "homepage_url": "https://kesantielu.github.io/oldvk",
    "minimum_chrome_version": "88",
    "icons": {
        "128": "icons/oldvkn-128.png",
        "96": "icons/oldvkn-96.png",
        "64": "icons/oldvkn-64.png",
        "48": "icons/oldvkn-48.png",
        "38": "icons/oldvkn-38.png",
        "32": "icons/oldvkn-32.png",
        "19": "icons/oldvkn-19.png",
        "16": "icons/oldvkn-16.png"
    },
    "action": {
        "default_icon": {
            "128": "icons/oldvkn-128.png",
            "96": "icons/oldvkn-96.png",
            "64": "icons/oldvkn-64.png",
            "48": "icons/oldvkn-48.png",
            "38": "icons/oldvkn-38.png",
            "32": "icons/oldvkn-32.png",
            "19": "icons/oldvkn-19.png",
            "16": "icons/oldvkn-16.png"
        },
        "default_title": "__MSG_appDesc__",
        "default_popup": "content/popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "management",
        "webNavigation",
        "webRequest",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*.vk.com/*"
    ],
    "background": {
        "service_worker": "content/events.js",
        "scripts": [
            "lib/lib.js",
            "content/events.js"
        ]
    },
    "content_scripts": [
        {
            "all_frames": true,
            "exclude_matches": [
                "*://vk.com/notifier.php*",
                "*://vk.com/al_*.php*",
                "*://vk.com/upload_fails.php*",
                "*://vk.com/ads_rotate.php*",
                "*://vk.com/share.php*",
                "*://vk.com/like.php*",
                "*://vk.com/wkview.php*",
                "*://vk.com/login.php*",
                "*://*.vk.com/q_frame.php*",
                "*://*.vk.com/q_frame.html*",
                "*://vk.com/*.svg*",
                "*://vk.com/widget_*.php*",
                "*://m.vk.com/*"
            ],
            "js": [
                "lib/mustache.min.js",
                "lib/lib.js",
                "content/actions.js",
                "content/mainStart.js"
            ],
            "matches": [
                "*://*.vk.com/*"
            ],
            "run_at": "document_start"
        },
        {
            "all_frames": true,
            "exclude_matches": [
                "*://vk.com/notifier.php*",
                "*://vk.com/al_*.php*",
                "*://vk.com/upload_fails.php*",
                "*://vk.com/ads_rotate.php*",
                "*://vk.com/share.php*",
                "*://vk.com/like.php*",
                "*://vk.com/wkview.php*",
                "*://vk.com/login.php*",
                "*://*.vk.com/q_frame.php*",
                "*://*.vk.com/q_frame.html*",
                "*://vk.com/*.svg*",
                "*://vk.com/widget_*.php*",
                "*://m.vk.com/*"
            ],
            "js": [
                "content/mainEnd.js"
            ],
            "matches": [
                "*://*.vk.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "options_page": "content/options.html",
    "options_ui": {
        "page": "content/options.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content/*.css",
                "lib/inject.js",
                "content/injectStart.js",
                "content/injectEnd.js"
            ],
            "matches": [
                "*://*.vk.com/*"
            ]
        }
    ]
}
